{
  "defaultStacks": ["flexible"],
  "packages":{
    "campaign-central":{
      "type":"autoscaling",
      "data":{
        "port":9000,
        "bucket":"composer-dist",
        "publicReadAcl": false
      }
    }
  },
  "recipes":{
    "default":{
      "depends" : ["artifactUploadOnly", "campaignCentralCloudformation", "deployOnly"]
    },
    "deployOnly":{
      "actionsPerHost": ["campaign-central.deploy"]
    },
    "artifactUploadOnly":{
      "actionsBeforeApp": ["campaign-central.uploadArtifacts"]
    }
  }
}